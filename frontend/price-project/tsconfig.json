{
  "compilerOptions": {
    "target": "esnext", // 用于指定编译之后的版本目录 这个应该是ES6
    "module": "esnext", // 用来指定要使用的模板标准 用于指定要是用的模板标准
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node", // 用node解析
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // TS的三种JSX模式preserve，react和react-native
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*" // 一定要先设置baseUrl
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "statics"
  ]
}
